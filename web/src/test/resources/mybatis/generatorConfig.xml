<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

    <!-- 本地的 MySQL jar 包位置 -->
    <classPathEntry
            location="C:\development\maven\repo\mysql\mysql-connector-java\5.1.46\mysql-connector-java-5.1.46.jar"/>
    <context id="docker-mysql" targetRuntime="MyBatis3">
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>

        <commentGenerator>
            <property name="suppressDate" value="true"/>
            <!-- 是否去除自动生成的注释 -->
            <property name="suppressAllComments" value="false"/>
        </commentGenerator>


        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3308/web"
                        userId="root"
                        password="password"
        />

        <javaTypeResolver>
            <property name="forceBigDecimal" value="false"/>
        </javaTypeResolver>

        <!-- 生成的 Pojo.java 文件 -->
        <javaModelGenerator targetPackage="xianzhan.pojo"
                            targetProject="src/main/java">
            <property name="enableSubPackage" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>
        <!-- 生成的 mapper.xml 文件 -->
        <sqlMapGenerator targetPackage="xianzhan.dao"
                         targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>
        <!--  -->
        <javaClientGenerator type="XMLMAPPER"
                             targetPackage="xianzhan.dao"
                             targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <table tableName="user"
               domainObjectName="User"
               mapperName="UserDao"
               enableDeleteByExample="false"
               enableCountByExample="false"
               enableUpdateByExample="false"
               enableSelectByExample="false"
        />
    </context>
</generatorConfiguration>